        <!-- Top menu item -->
        <menuitem name="Cripto Monedes" id="kcra__product_manage_menu_root" sequence="1"/>

        <!-- menu categories -->
        <menuitem name="Gestió de Cripto Monedes" id="kcra__product_manage_category_1" sequence="1" parent="kcra__product_manage_menu_root"/>
        <menuitem name="Vista General" id="kcra__product_manage_menu_2" sequence="1" parent="kcra__product_manage_category_1"
                  action="kcra__product_manage_action_window"/>

    </data>
