<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="kcra__product_manage_coins">
            <field name="name">kcra_product_manage_coins</field>
            <field name="model">kcra__product_manage.kcra__product_manage_coins</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="price"/>
                    <field name="tags_id"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record id="kcra__product_manage_action_window" model="ir.actions.act_window">
            <field name="name">Gestió de Cripto Monedes</field>
            <field name="res_model">kcra__product_manage.kcra__product_manage_coins</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- server action to the one above -->
